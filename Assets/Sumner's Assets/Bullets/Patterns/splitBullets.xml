<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

  <action label="top">
    <repeat>
      <times>999</times>
      <action>
        <fire>
          <direction type="absolute">($rand*90)-45</direction>
          <speed>0.5</speed>
          <bulletRef label="splitLevel1" />
        </fire>
        <wait>($rand*30)+20</wait>
      </action>
    </repeat>
  </action>

  <bullet label="splitLevel1">
    <action>
      <wait>100</wait>
      <fire>
        <direction type="relative">($rand*90)-45</direction>
        <speed>0.5</speed>
        <bulletRef label="splitLevel2" />
      </fire>
      <fire>
        <direction type="relative">($rand*90)-45</direction>
        <speed>0.5</speed>
        <bulletRef label="splitLevel2" />
      </fire>
      <!--
      <fire>
        <direction type="absolute">($rand*180)-90</direction>
        <speed>0.5</speed>
        <bulletRef label="splitLevel2" />
      </fire>
      -->
      <vanish />
    </action>
  </bullet>

  <bullet label="splitLevel2">
    <action>
    </action>
  </bullet>
  
</bulletml>