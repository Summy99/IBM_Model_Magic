<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
  
  <action label="top">
    <repeat>
      <times>100</times>
      <action>
        <repeat>
          <times>($rand * 3) + 1</times>
          <action>
            <fire>
              <direction type="relative">($rand * 45) - 22.5</direction>
              <speed>1</speed>
              <bullet label="tear" />
            </fire>
          </action>
        </repeat>
        <wait>10</wait>
      </action>
    </repeat>
  </action>
  
</bulletml>