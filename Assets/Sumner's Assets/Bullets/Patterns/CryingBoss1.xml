<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

  <action label="top">
    <repeat>
      <times>24</times>
      <action>
        <fire>
          <direction type="sequence">15</direction>
          <speed>1</speed>
          <bulletRef label="tear"/>
        </fire>
      </action>
    </repeat>
  </action>

  <bullet label="tear">
    <direction type="absolute">0</direction>
    <speed>1</speed>
    <action>
      <repeat>
        <times>99</times>
        <action>
          <fire>
            <speed>0</speed>
            <bulletRef label="spiral" />
          </fire>
          <wait>10</wait>
        </action>
      </repeat>
    </action>
  </bullet>

  <bullet label="spiral">
    <direction>$rand * 360</direction>
    <speed>0</speed>
    <action>
      <wait>120</wait>
      <changeSpeed>
        <speed>0.2</speed>
        <term>15</term>
      </changeSpeed>
    </action>
  </bullet>
  
</bulletml>