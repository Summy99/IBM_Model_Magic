<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
  <action label="top">
    <repeat>
      <times>5</times>
      <action>
        <fire>
          <direction type="absolute">($rand*60)-30</direction>
          <speed>1</speed>
          <bulletRef label="bigGrow" />
        </fire>
        <wait>240</wait>
      </action>
    </repeat>
  </action>

  <bullet label="bigGrow">
    <action>
      <changeSpeed>
        <speed>0.01</speed>
        <term>30</term>
      </changeSpeed>
    </action>
    <action>
      <wait>10</wait>
      <repeat>
        <times>6</times>
        <action>
          <wait>30</wait>
          <repeat>
            <times>6</times>
            <action>
              <fire>
                <direction type="sequence">60</direction>
                <speed>1</speed>
                <bulletRef label="spiral" />
              </fire>
            </action>
          </repeat>
        </action>
      </repeat>
    </action>
  </bullet>

  <bullet label="spiral">
    <action>
      <changeDirection>
        <direction type="relative">180</direction>
        <term>60</term>
      </changeDirection>
    </action>
  </bullet>
  
</bulletml>