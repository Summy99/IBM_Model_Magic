<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

  <action label="top">
    <repeat>
      <times>($rand * 20) + 30</times>
      <action>
        <fire>
          <direction type="absolute">($rand * 180) - 90</direction>
          <speed type="absolute">0.75</speed>
          <bulletRef label="creator" />
        </fire>
        <wait>30</wait>
      </action>
    </repeat>
  </action>

  <bullet label="creator">
    <action>
      <wait>30</wait>
      <repeat>
        <times>999</times>
        <action>
          <actionRef label="direction" />
        </action>
      </repeat>
    </action>
  </bullet>

  <action label="direction">
    <fire>
      <speed type="absolute">0</speed>
      <bulletRef label="created" />
    </fire>
    <changeDirection>
      <direction type="relative">($rand * 60) - 30</direction>
      <term>4</term>
    </changeDirection>
  </action>
  
  <bullet label="created">
    <action>
      <wait>240</wait>
      <vanish />
    </action>
  </bullet>
  
</bulletml>