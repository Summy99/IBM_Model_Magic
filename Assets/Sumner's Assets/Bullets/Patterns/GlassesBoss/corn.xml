<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
  <action label="top">
    <repeat>
      <times>99999</times>
      <action>
        <repeat>
          <times>$rand*5+3</times>
          <action>
            <fire>
              <direction type="absolute">$rand*360</direction>
              <speed>0.75</speed>
              <bulletRef label="default" />
            </fire>
          </action>
        </repeat>
        <wait>$rand*10+10</wait>
      </action>
    </repeat>
  </action>

  <bullet label="default">
    <action>
      <repeat>
        <times>999999</times>
        <action>
          <changeDirection>
            <direction type="relative">1</direction>
            <term>5</term>
          </changeDirection>
          <wait>5</wait>
        </action>
      </repeat>
    </action>
  </bullet>
</bulletml>