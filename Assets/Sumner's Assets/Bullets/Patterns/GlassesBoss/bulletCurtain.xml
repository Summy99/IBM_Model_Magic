<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
  <action label="top">
    <fire>
      <direction type="absolute">180</direction>
      <speed>1</speed>
      <bulletRef label="spawner" />
    </fire>
  </action>

  <bullet label="spawner">
    <action>
      <changeSpeed>
        <speed>0.001</speed>
        <term>60</term>
      </changeSpeed>
      <wait>60</wait>
      <repeat>
        <times>20</times>
        <action>
          <fire>
            <direction type="absolute">90</direction>
            <speed type="sequence">0.25</speed>
            <bulletRef label="rod" />
          </fire>
        </action>
      </repeat>
      <repeat>
        <times>20</times>
        <action>
          <fire>
            <direction type="absolute">270</direction>
            <speed type="sequence">0.25</speed>
            <bulletRef label="rod" />
          </fire>
        </action>
      </repeat>
    </action>
  </bullet>

  <bullet label="rod">
    <speed>0</speed>
    <action>
      <changeSpeed>
        <speed>0</speed>
        <term>60</term>
      </changeSpeed>
      <wait>60</wait>
      <repeat>
        <times>50</times>
        <action>
          <wait>($rand*120)+60</wait>
          <fire>
            <direction type="absolute">0</direction>
            <speed>0.5</speed>
            <bullet label="drip" />
          </fire>
        </action>
      </repeat>
    </action>
  </bullet>
</bulletml>