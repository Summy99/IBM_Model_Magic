<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<changeSpeed>
			<speed type="absolute">0.75</speed>
		<term>1</term>
	</changeSpeed>
	<changeDirection>
			<direction type="absolute">90</direction>
		<term>1</term>
	</changeDirection>
	<wait>1</wait>
	<changeDirection>
			<direction type="sequence">0.7</direction>
			<term>514</term>
	</changeDirection>
	<wait>2</wait>
	<repeat>
		<times>32</times>
		<action>
			<actionRef label="shoot"/>
			<wait>16</wait>
		</action>
	</repeat>
	<changeSpeed>
		<speed type="absolute">0</speed>
		<term>1</term>
	</changeSpeed>
	<wait>10</wait>
</action>

<action label="shoot">
	<repeat>
		<times>20</times>
		<action>
			<fire>
				<direction type="sequence">360</direction>
				<speed>0.5</speed>
				<bulletRef label="curve"/>
			</fire>
		</action>
	</repeat>
</action>

<bullet label="curve">
	<action>
		<changeDirection>
				<direction type="sequence">1.25-(1.6*$rand)</direction>
			<term>360</term>
		</changeDirection>
		<wait>360</wait>
		<vanish/>
	</action>
</bullet>

</bulletml>
